@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>UCAHM - Federal Land, Inc.</title>
    <meta name="description" content="System intends to serve as interim process on monitoring the handover process of unit, parking, and common area">
    <meta name="keywords" content="UCAHM, Federal Land, Inc.">
    <meta name="author" content="Jomel Dicen">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <style>
        .input-group .invalid-feedback {
            display: none;
        }

        .input-group.has-error .invalid-feedback {
            display: block;
        }
    </style>

</head>
<body class="hold-transition login-page" ng-app="app" ng-controller="cRegistration">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Super</b>ADMIN</a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Register a new membership</p>

                <form name="registrationForm" novalidate role="form">
                    <div class="input-group mb-3" show-errors>
                        <input type="email" class="form-control" placeholder="Email" id="email" name="email" ng-model="data.Email" ng-required="true">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        <div style="color:red" class="invalid-feedback" ng-if="registrationForm.email.$error.required">You can't leave this empty.</div>
                        <div style="color:red" class="invalid-feedback" ng-if="registrationForm.email.$error">A valid email is required.</div>
                    </div>
                    <div class="input-group mb-3" show-errors>
                        <input type="password" class="form-control" placeholder="Password" ng-model="data.Password" id="password" name="password" data-provide="pwstrength" ng-required="true" ng-minlength="6" ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).+$/">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <div style="color:red" class="invalid-feedback" ng-if="registrationForm.password.$error.required">You can't leave this empty.</div>
                        <div style="color:red" class="invalid-feedback" ng-if="registrationForm.password.$error.minlength">Use at least 6 characters.</div>
                        <div style="color:red" class="invalid-feedback" ng-if="registrationForm.password.$error.pattern">Minimum one uppercase, lowercase and integer required.</div>
                    </div>
                    <div class="input-group mb-3" show-errors>
                        <input type="password" class="form-control" placeholder="Retype password" ng-model="data.ConfirmPassword" id="confirmpassword" name="confirmpassword" ng-required="true" ng-pattern="data.Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <div style="color:red" class="invalid-feedback" ng-if="registrationForm.confirmpassword.$error.required">You can't leave this empty.</div>
                        <div style="color:red" class="invalid-feedback" ng-if="registrationForm.confirmpassword.$error.pattern">These passwords don't match. Try again?</div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree" checked>
                                <label for="agreeTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block" ng-click="registrationData(data)">Register</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <a href="~/" class="text-center">I already have a membership</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/dist/js/adminlte.min.js"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-sanitize.min.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-3.0.2.min.js"></script>
    <script src="~/Scripts/ProjectScriptFile/sweetalert.min.js"></script>
    <script src="~/Scripts/ProjectScriptFile/app.js"></script>
    <script src="~/Scripts/ProjectScriptFile/Register.js"></script>

</body>
</html>

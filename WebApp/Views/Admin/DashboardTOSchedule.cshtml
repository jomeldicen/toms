
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="DashboardTOSchedule" ng-init="init('@ViewBag.PageUrl')">
    <section class="content">
        <div class="loading" ng-if="loading">Loading &#8230;</div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <p class="text-xs"><strong>Note: </strong><em>Please take note that any related data coming from SAP will be synched &amp; reflected to TOMS on 12 midnight</em></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3" ng-init="GetSearchData()">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <h3 class="card-title">
                                <i class="fas fa-bars mr-1"></i>Search
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form name="DashboardTOSchedule" novalidate role="form" ng-submit="$event.preventDefault()">
                                <div class="row">
                                    <div class="col-12 form-group mb-2">
                                        <label class="mb-1" for="parent">Turnover Associate <span class="text-danger font-weight-bold">*</span></label>
                                        <div ng-dropdown-multiselect="" options="HandoverAssocs" selected-model="data.OptionIDs" checkboxes="true" extra-settings="setting1"></div>
                                    </div>

                                    <div class="col-12 form-group mb-2">
                                        <label class="mb-1" for="parent">Account Type <span class="text-danger font-weight-bold">*</span></label>
                                        <div ng-dropdown-multiselect="" options="AccountTypes" selected-model="data.OptionIDs1" checkboxes="true" extra-settings="setting1"></div>
                                    </div>

                                    <div class="col-12 form-group mb-2">
                                        <label class="mb-1" for="parent">Turnover Option <span class="text-danger font-weight-bold">*</span></label>
                                        <div ng-dropdown-multiselect="" options="TurnoverOptions" selected-model="data.OptionIDs2" checkboxes="true" extra-settings="setting1"></div>
                                    </div>

                                    <div class="col-12 form-group mb-2">
                                        <label class="mb-1" for="parent">Period (Date) <span class="text-danger font-weight-bold">*</span></label>
                                        <div class="form-group row mb-1 has-feedback" show-errors>
                                            <label class="col-sm-3 col-form-label font-weight-normal" for="periodFrom">From</label>
                                            <div class="col-sm-9">
                                                <div class="input-group mb-0">
                                                    <input type="text" name="periodFrom" id="periodFrom" class="form-control form-control-sm" onkeydown="return false"
                                                           uib-datepicker-popup="{{dateFormat}}" ng-model="pagingInfo.DateFrom" is-open="popup1.opened" datepicker-options="dateOptionsCurrent"
                                                           ng-click="open1()" ng-required="true" placeholder="mm/dd/yyyy" close-text="Close" />
                                                    <div class="input-group-append">
                                                        <div class="input-group-text" ng-click="open1()">
                                                            <span class="fas fa-calendar-alt"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row mb-0 has-feedback" show-errors>
                                            <label class="col-sm-3 col-form-label font-weight-normal" for="periodTo">To</label>
                                            <div class="col-sm-9">
                                                <div class="input-group mb-1">
                                                    <input type="text" name="periodTo" id="periodTo" class="form-control form-control-sm" onkeydown="return false"
                                                           uib-datepicker-popup="{{dateFormat}}" ng-model="pagingInfo.DateTo" is-open="popup2.opened" datepicker-options="dateOptionsCurrent2"
                                                           ng-click="open2()" ng-required="true"  placeholder="mm/dd/yyyy" close-text="Close" />
                                                    <div class="input-group-append">
                                                        <div class="input-group-text" ng-click="open2()">
                                                            <span class="fas fa-calendar-alt"></span>
                                                        </div>
                                                    </div>
                                                </div>                                               
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 form-group mb-0">
                                        <button type="button" class="btn btn-default btn-sm float-right" data-dismiss="modal" ng-click="clearSearch()">
                                            <i class="fas fa-times-circle"></i> Clear
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right  mr-1" ng-click="GetDetailByCriteria(data.OptionIDs, data.OptionIDs1, data.OptionIDs2)">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->

                <div class="col-md-9">
                    <div class="loading" ng-if="loading">Loading &#8230;</div>
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <h3 class="card-title">
                                <i class="fas fa-th mr-1"></i> Schedule Summary
                            </h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length form-inline">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <form ng-submit="search()" role="form">
                                            <div class="form-inline dataTables_filter">
                                                <label>
                                                    Search:
                                                    <input type="search" class="form-control form-control-sm" placeholder="" ng-model="pagingInfo.search">
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline custom-pr-table" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting" ng-click="sort('FinalTurnoverDate')">Turnover Date</th>
                                                    <th class="sorting" ng-click="sort('FinalTurnoverDate')">Turnover Time</th>
                                                    <th class="sorting" ng-click="sort('FinalTurnoverOption')">Turnover Option</th>
                                                    <th class="sorting" ng-click="sort('CustomerNos')">Customer Nos</th>
                                                    <th class="text-center sorting" ng-click="sort('ProjectCode')">Project / Tower</th>
                                                    <th class="text-center sorting" ng-click="sort('RefNos')">Unit Nos</th>
                                                    <th class="text-center sorting" ng-click="sort('CustomerName')">Customer Name</th>
                                                    <th class="text-center sorting" ng-click="sort('HandoverAssociate')">TO Associate</th>
                                                    <th class="text-center sorting" ng-click="sort('AccountTypeDesc')">Account Type</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="9"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="to in TOSchedule">
                                                    <td class="text-center text-xs" ng-bind="to.FinalTurnoverDate | date : 'MM/dd/y'"></td>
                                                    <td class="text-center text-xs" ng-bind="to.FinalTurnoverDate | date : 'hh:mm a'"></td>
                                                    <td class="text-center text-xs" ng-bind="to.FinalTurnoverOption"></td>
                                                    <td class="text-center text-xs" ng-bind="to.CustomerNos"></td>
                                                    <td class="text-center text-xs" ng-bind="to.ProjectCode"></td>
                                                    <td class="text-center text-xs" ng-bind="to.RefNos"></td>
                                                    <td class="text-xs" ng-bind="to.CustomerName"></td>
                                                    <td class="text-xs" ng-bind="to.HandoverAssociate"></td>
                                                    <td class="text-center text-xs" ng-bind="to.AccountTypeDesc"></td>
                                               </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-secondary btn-sm float-right" ng-if="Ctrl.wPrint" ng-disabled="disableButton" ng-click="ExportReport('Print')">
                                            <i class="fas fa-print"></i> Report
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wDownload" ng-disabled="disableButton" ng-click="ExportReport('Download')">
                                            <i class="fas fa-download"></i> Download
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>  <!-- /.card-body -->
                    </div>  <!-- /.card -->
                </div> <!-- /.col -->
            </div> <!-- /.row -->
        </div> <!-- /.container-fluid -->
    </section>
</div>

@section scripts{
    <script src="~/Scripts/lodash.min.js"></script>
    <script src="~/Scripts/ProjectScriptFile/DashboardTOSchedule.js"></script>
}


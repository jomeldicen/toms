
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div ng-controller="ApprovalTemplate">
    <section class="content" ng-init="GetApprovalTemplateData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-8">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-danger btn-sm float-right" ng-if="Ctrl.wDelete" ng-click="DeleteData(ApprovalTemplate)">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(ApprovalTemplate, 0)">
                                            <i class="fas fa-times-circle"></i> Deactivate
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(ApprovalTemplate, 1)">
                                            <i class="fas fa-check-circle"></i> Activate
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" data-toggle="modal" data-target="#createApprovalTemplateModal" ng-if="Ctrl.wAdd" ng-click="AddData()">
                                            <i class="fas fa-plus-circle"></i> Create
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length form-inline">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <form ng-submit="search()" role="form">
                                            <div class="form-inline dataTables_filter">
                                                <label>
                                                    Search:
                                                    <input type="search" class="form-control form-control-sm" placeholder="" ng-model="pagingInfo.search">
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="text-center" width="3%">
                                                        <input type="checkbox" name="checkAll" id="checkAll" ng-model="selectedAll" ng-click="selectAll()" ng-disabled="!Ctrl.wDelete || !Ctrl.wEdit" />
                                                    </th>
                                                    <th class="sorting" width="4%" ng-click="sort('Id')">Nos</th>
                                                    <th class="sorting" ng-click="sort('ApprovalTemplateCode')">Code</th>
                                                    <th class="sorting" ng-click="sort('Description')">Description</th>
                                                    <th class="sorting" ng-click="sort('Address')">Address</th>
                                                    <th class="text-center sorting" ng-click="sort('Published')">Status</th>
                                                    <th class="text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="7"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="co in ApprovalTemplate">
                                                    <td class="text-center">
                                                        <input type="checkbox" name="check" id="check{{$index + 1}}" ng-model="co.isChecked" ng-change="checkSelected(co.isChecked)" ng-disabled="!Ctrl.wDelete || !Ctrl.wEdit" />
                                                    </td>
                                                    <td ng-bind="(pagingInfo.itemsPerPage * (pagingInfo.page - 1)) + $index + 1"></td>
                                                    <td ng-bind="co.ApprovalTemplateCode"></td>
                                                    <td ng-bind="co.Description"></td>
                                                    <td ng-bind="co.Address"></td>
                                                    <td class="text-center"><span ng-class="(co.Published === 'True')? 'badge badge-success' : 'badge badge-danger'" ng-bind="(co.Published === 'True')? 'Active' : 'Inactive'"></span></td>
                                                    <td class="text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">
                                                        <button type="button" class="btn btn-secondary btn-circle btn-sm" data-toggle="modal" data-target="#createApprovalTemplateModal" ng-if="Ctrl.wEdit" ng-click="EditApprovalTemplateData(co)"><i class="fas fa-pencil-alt"></i></button>
                                                        <button type="button" class="btn btn-danger btn-circle btn-sm" ng-if="Ctrl.wDelete" ng-click="DeleteApprovalTemplate(co)"><i class="fas fa-trash-alt"></i></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>

    <div class="modal fade" id="createApprovalTemplateModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Approval Template - Setup</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form name="ApprovalTemplateForm" class="form-horizontal" novalidate role="form">
                    <div class="modal-body">
                        <div class="form-group has-feedback row mb-0" show-errors>
                            <label for="Name" class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control form-control-sm" id="Name" name="Name" placeholder="Name">
                                <div style="color:red" class="invalid-feedback" ng-if="ApprovalTemplateForm.Name.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="col-sm-2">
                                <select class="form-control form-control-sm" id="published" name="published" ng-model="data.Published" ng-required="true">
                                    <option value="True">Active</option>
                                    <option value="False">Inactive</option>
                                </select>
                                <div style="color:red" class="invalid-feedback" ng-if="ApprovalTemplateForm.Published.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>
                        <div class="form-group has-feedback row" show-errors>
                            <label for="Description" class="col-sm-3 col-form-label">Description</label>
                            <div class="col-sm-9">
                                <textarea class="form-control form-control-sm" id="Description" name="Description" rows="2" placeholder="Description"></textarea>
                                <div style="color:red" class="invalid-feedback" ng-if="ApprovalTemplateForm.Description.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>

                        <div class="mb-0">
                            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-originator-tab" data-toggle="pill" href="#custom-originator" role="tab" aria-controls="custom-originator" aria-selected="true">Originator</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-module-tab" data-toggle="pill" href="#custom-module" role="tab" aria-controls="custom-module" aria-selected="false">Module</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-stages-tab" data-toggle="pill" href="#custom-stages" role="tab" aria-controls="custom-stages" aria-selected="false">Stages</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-terms-tab" data-toggle="pill" href="#custom-terms" role="tab" aria-controls="custom-terms" aria-selected="false">Terms</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="custom-content-below-tabContent">
                                <div class="tab-pane fade show active" id="custom-originator" role="tabpanel" aria-labelledby="custom-originator-tab">
                                    <div class="card-body">
                                        <p><u>Originator</u></p>
                                        <div class="row">
                                            <table class="table table-bordered table-striped customTable mb-0">
                                                <thead>
                                                    <tr>
                                                        <th width="3%">Nos</th>
                                                        <th>User</th>
                                                        <th>Department</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>1</td>
                                                        <td>User 1</td>
                                                        <td>Customer Management Group</td>
                                                    </tr>
                                                    <tr>
                                                        <td>2</td>
                                                        <td>User 2</td>
                                                        <td>Customer Management Group</td>
                                                    </tr>
                                                    <tr>
                                                        <td>3</td>
                                                        <td>&nbsp;</td>
                                                        <td>&nbsp;</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="custom-module" role="tabpanel" aria-labelledby="custom-module-tab">
                                    <div class="card-body">
                                        <p class="mb-1"><u>Module Transaction</u></p>
                                        <div class="row">
                                            <div class="col-4">
                                                <div class="icheck-primary">
                                                    <input type="checkbox" id="Module1" name="ModuleName">
                                                    <label for="Module1">Permit and Utilities</label>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="icheck-primary">
                                                    <input type="checkbox" id="Module2" name="ModuleName">
                                                    <label for="Module2">Work Completion</label>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="icheck-secondary">
                                                    <input type="checkbox" id="Module3" name="ModuleName">
                                                    <label for="Module3">Rectification</label>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="icheck-primary">
                                                    <input type="checkbox" id="Module4" name="ModuleName">
                                                    <label for="Module4">Turnover Schedule</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="custom-stages" role="tabpanel" aria-labelledby="custom-stages-tab">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <p><u>Approval Stages</u></p>
                                            </div>
                                            <div class="col-6 text-right">
                                                <div class="icheck-secondary mb-1">
                                                    <input type="checkbox" id="wStages" name="wStages" ng-checked="true">
                                                    <label for="wStages">with Approval Stages?</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <table class="table table-bordered table-striped customTable mb-0">
                                                <thead>
                                                    <tr>
                                                        <th width="3%">Nos</th>
                                                        <th>Stage Name</th>
                                                        <th>Stage Description</th>
                                                        <th>Turnaround Time</th>
                                                        <th>Occurs</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>1</td>
                                                        <td>CMG Head</td>
                                                        <td>Final Approver for Unit Turnover </td>
                                                        <td>100</td>
                                                        <td>Daily</td>
                                                    </tr>
                                                    <tr>
                                                        <td>2</td>
                                                        <td>&nbsp;</td>
                                                        <td>&nbsp;</td>
                                                        <td>&nbsp;</td>
                                                        <td>&nbsp;</td>
                                                    </tr>
                                                    <tr>
                                                        <td>3</td>
                                                        <td>&nbsp;</td>
                                                        <td>&nbsp;</td>
                                                        <td>&nbsp;</td>
                                                        <td>&nbsp;</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="custom-terms" role="tabpanel" aria-labelledby="custom-terms-tab">
                                    <div class="card-body">
                                        <p class="mb-1"><u>General Settings</u></p>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group has-feedback row mb-0" show-errors>
                                                    <label for="TAT" class="col-sm-5 col-form-label">Turnaround Time</label>
                                                    <div class="col-sm-7">
                                                        <input type="number" class="form-control form-control-sm" id="TAT" name="TAT" placeholder="Turnaround Time">
                                                        <div style="color:red" class="invalid-feedback" ng-if="ApprovalTemplateForm.TAT.$error.required">You can't leave this empty.</div>
                                                    </div>
                                                </div>
                                                <div class="form-group has-feedback row mb-0" show-errors>
                                                    <label for="SMSTemplate" class="col-sm-5 col-form-label">Occurs</label>
                                                    <div class="col-sm-7">
                                                        <select class="form-control form-control-sm" id="SMSTemplate" name="SMSTemplate" ng-required="true">
                                                            <option value="">Please Select</option>
                                                            <option value="Hourly">Hourly</option>
                                                            <option value="Daily">Daily</option>
                                                            <option value="Weekly">Weekly</option>
                                                        </select>
                                                        <div style="color:red" class="invalid-feedback" ng-if="ApprovalTemplateForm.SMSTemplate.$error.required">You can't leave this empty.</div>
                                                    </div>
                                                </div>
                                                <div class="form-group has-feedback row mb-0" show-errors>
                                                    <label for="EmailTemplate" class="col-sm-5 col-form-label">Alert by Email</label>
                                                    <div class="col-sm-1">
                                                        <div class="icheck-primary">
                                                            <input type="checkbox" id="EmailTemplate" name="AlertEmail">
                                                            <label for="EmailTemplate">&nbsp;</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <select class="form-control form-control-sm" id="EmailTemplate" name="EmailTemplate" ng-required="true">
                                                            <option value="">Select Email Template</option>
                                                            <option value="navbar-indigo">Email Notification 1</option>
                                                            <option value="navbar-primary">Email Notification 2</option>
                                                        </select>
                                                        <div style="color:red" class="invalid-feedback" ng-if="ApprovalTemplateForm.EmailTemplate.$error.required">You can't leave this empty.</div>
                                                    </div>
                                                </div>
                                                <div class="form-group has-feedback row mb-0" show-errors>
                                                    <label for="SMSTemplate" class="col-sm-5 col-form-label">SMS Template</label>
                                                    <div class="col-sm-1">
                                                        <div class="icheck-primary">
                                                            <input type="checkbox" id="SMSTemplate" name="AlertSMS">
                                                            <label for="SMSTemplate">&nbsp;</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <select class="form-control form-control-sm" id="SMSTemplate" name="SMSTemplate" ng-required="true">
                                                            <option value="">Select SMS Template</option>
                                                            <option value="navbar-indigo">SMS Notification 1</option>
                                                            <option value="navbar-primary">SMS Notification 2</option>
                                                        </select>
                                                        <div style="color:red" class="invalid-feedback" ng-if="ApprovalTemplateForm.SMSTemplate.$error.required">You can't leave this empty.</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                        <button type="button" class="btn btn-secondary btn-sm" ng-click="SaveApprovalTemplate(data)">Save changes</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/ApprovalTemplate.js"></script>
}



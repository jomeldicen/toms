
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="TurnoverInterface" ng-init="init('@ViewBag.PageUrl')">
    <section class="content" ng-init="GetTurnoverInterfaceData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wSync" ng-click="StatusData(TurnoverInterface)">
                                            <i class="fas fa-sync"></i> Re-Snyc
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length form-inline">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <form ng-submit="search()" role="form">
                                            <div class="form-inline dataTables_filter">
                                                <label>
                                                    Search:
                                                    <input type="search" class="form-control form-control-sm" placeholder="" ng-model="pagingInfo.search">
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="text-center" width="2%">
                                                        <input type="checkbox" name="checkAll" id="checkAll" ng-model="selectedAll" ng-click="selectAll()" ng-disabled="!Ctrl.wSync" />
                                                    </th>
                                                    <th width="4%">Nos</th>
                                                    <th class="sorting" ng-click="sort('TOModule')">TO Module</th>
                                                    <th class="sorting" ng-click="sort('CompanyCode')">Company</th>
                                                    <th class="sorting" ng-click="sort('ProjectCode')">Project</th>
                                                    <th class="sorting" ng-click="sort('UnitCategory')">Unit Category</th>
                                                    <th class="sorting" ng-click="sort('UnitNos')">Unit Nos</th>
                                                    <th class="sorting" ng-click="sort('CustomerNos')">Customer Nos</th>
                                                    <th class="sorting" ng-click="sort('TurnoverStatus')">Turnover Status</th>
                                                    <th class="sorting" ng-click="sort('TOAcceptanceDate')">Unit Acceptance / Deemed Date</th>
                                                    <th class="sorting text-center" ng-click="sort('IsTODateSAPSync')">Sync Status</th>
                                                    <th class="sorting" ng-click="sort('TODateSyncDate')">Date Sync</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="6"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="to in TurnoverInterface">
                                                    <td class="text-center">
                                                        <input type="checkbox" name="check" id="check{{$index + 1}}" ng-model="to.isChecked" ng-change="checkSelected(to.isChecked)" ng-disabled="!Ctrl.wSync" />
                                                    </td>
                                                    <td ng-bind="(pagingInfo.itemsPerPage * (pagingInfo.page - 1)) + $index + 1"></td>
                                                    <td ng-bind="to.TOModule"></td>
                                                    <td ng-bind="to.CompanyCode"></td>
                                                    <td ng-bind="to.ProjectCode"></td>
                                                    <td ng-bind="to.UnitCategory"></td>
                                                    <td ng-bind="to.UnitNos"></td>
                                                    <td ng-bind="to.CustomerNos"></td>
                                                    <td ng-bind="to.TurnoverStatus"></td>
                                                    <td class="text-center" ng-bind="to.TOAcceptanceDate | date :  'MM/dd/yyyy'"></td>
                                                    <td class="text-center"><span ng-class="(to.IsTODateSAPSync === 1)? 'badge badge-success' : 'badge badge-warning'" ng-bind="(to.IsTODateSAPSync === 1)? 'Success' : 'For Synching....'"></span></td>
                                                    <td class="text-center text-xs" ng-bind="to.TODateSyncDate | date :  'MM/dd/yyyy h:mm:ss a'"></td>  
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/TurnoverInterface.js"></script>
}

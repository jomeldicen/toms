
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="Company" ng-init="init('@ViewBag.PageUrl')">
    <section class="content" ng-init="GetCompanyData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-danger btn-sm float-right" ng-if="Ctrl.wDelete" ng-click="DeleteData(Company)">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(Company, 0)">
                                            <i class="fas fa-times-circle"></i> Deactivate
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(Company, 1)">
                                            <i class="fas fa-check-circle"></i> Activate
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" data-toggle="modal" data-target="#createCompanyModal" ng-if="Ctrl.wAdd" ng-click="AddData()">
                                            <i class="fas fa-plus-circle"></i> Create
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" data-toggle="modal" data-target="#fetchCompanyModal" ng-if="Ctrl.wFetch" ng-click="clearData()">
                                            <i class="fas fa-sync"></i> Fetch
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length form-inline">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <form ng-submit="search()" role="form">
                                            <div class="form-inline dataTables_filter">
                                                <label>
                                                    Search: 
                                                    <input type="search" class="form-control form-control-sm" placeholder="" ng-model="pagingInfo.search">
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="text-center" width="3%">
                                                        <input type="checkbox" name="checkAll" id="checkAll" ng-model="selectedAll" ng-click="selectAll()" ng-disabled="(!Ctrl.wDelete && !Ctrl.wEdit)"/>
                                                    </th>
                                                    <th width="4%">Nos</th>
                                                    <th class="sorting" ng-click="sort('Code')">Code</th>
                                                    <th class="sorting" ng-click="sort('Description')">Description</th>
                                                    <th class="sorting" ng-click="sort('Address')">Address</th>
                                                    <th class="text-center sorting" ng-click="sort('Published')">Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="6"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="co in Company">
                                                    <td class="text-center">
                                                        <input type="checkbox" name="check" id="check{{$index + 1}}" ng-model="co.isChecked" ng-change="checkSelected(co.isChecked)" ng-disabled="(!Ctrl.wDelete && !Ctrl.wEdit)"/>
                                                    </td>
                                                    <td ng-bind="(pagingInfo.itemsPerPage * (pagingInfo.page - 1)) + $index + 1"></td>
                                                    <td ng-bind="co.Code"></td>
                                                    <td ng-bind="co.Description"></td>
                                                    <td ng-bind="co.Address"></td>
                                                    <td class="text-center"><span ng-class="(co.Published === 'True')? 'badge badge-success' : 'badge badge-danger'" ng-bind="(co.Published === 'True')? 'Active' : 'Inactive'"></span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>

    <div class="modal fade" id="fetchCompanyModal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Fetch Data</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body js-loading-bar">
                    <p>You are going to sync SAP Company data!</p>
                    <p>Do you want to proceed?</p>

                    <div class="progress progress-sm active">
                        <div class="progress-bar bg-primary progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                            <span class="sr-only">0% Complete</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                    <button type="button" class="btn btn-primary btn-sm" ng-disabled="ro" ng-click="FetchCompany()">Proceed</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

    <div class="modal fade" id="createCompanyModal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Company</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form name="companyForm" novalidate role="form">
                    <div class="modal-body">
                        <div class="form-group has-feedback" show-errors>
                            <label for="Code">Code</label>
                            <input type="text" class="form-control form-control-sm" id="Code" name="Code" ng-model="data.Code" ng-required="true" placeholder="Company Code">
                            <div style="color:red" class="invalid-feedback" ng-if="companyForm.Code.$error.required">You can't leave this empty.</div>
                        </div>
                        <div class="form-group has-feedback" show-errors>
                            <label for="Description">Description</label>
                            <input type="text" class="form-control form-control-sm" id="Description" name="Description" ng-model="data.Description" ng-required="true" placeholder="Description">
                            <div style="color:red" class="invalid-feedback" ng-if="companyForm.Description.$error.required">You can't leave this empty.</div>
                        </div>
                        <div class="form-group has-feedback" show-errors>
                            <label for="Address">Address</label>
                            <input type="text" class="form-control form-control-sm" id="Address" name="Address" ng-model="data.Address" ng-required="true" placeholder="Address">
                            <div style="color:red" class="invalid-feedback" ng-if="companyForm.Address.$error.required">You can't leave this empty.</div>
                        </div>
                        <div class="form-group has-feedback" show-errors>
                            <label for="published">Published</label>
                            <select class="form-control form-control-sm" id="published" name="published" ng-model="data.Published" ng-required="true">
                                <option value="True">Active</option>
                                <option value="False">Inactive</option>
                            </select>
                            <div style="color:red" class="invalid-feedback" ng-if="companyForm.published.$error.required">You can't leave this empty.</div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                        <button type="button" class="btn btn-secondary btn-sm" ng-click="SaveCompany(data)">Save changes</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/Company.js"></script>
}

@{
    ViewBag.Title = "Logs Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="dashboard" ng-controller="Dashboard" ng-init="init('@ViewBag.PageUrl')">
    <section class="content" ng-init="GetBasicData()">
        <div class="container-fluid row">
            <div class="col-12">
                <div class="row">
                    <div class="col-lg-3 col-xs-6">
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3 ng-bind="TotalUser"></h3>
                                <p>Total User</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person"></i>
                            </div>
                            <a href="~/Admin/Users" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-xs-6">
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3 ng-bind="ActiveUser"></h3>
                                <p>Active User</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person-add"></i>
                            </div>
                            <a href="~/Admin/Users" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-xs-6">
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3 ng-bind="TotalLogin"></h3>
                                <p>Total Login</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-log-in"></i>
                            </div>
                            <a href="~/Admin/LoginHistory" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-xs-6">
                        <div class="small-box bg-danger">
                            <div class="inner">
                                <h3 ng-bind="TotalPageVisit"></h3>
                                <p>Total Page Visit</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-document"></i>
                            </div>
                            <a href="~/Admin/PageVisited" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <!-- ./col -->
                </div>
            </div>
            
            <div class="col-6">
                <!-- DONUT CHART -->
                <div class="card card-gray card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Role Wise User</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="roleWiseUser" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

            <div class="col-6">
                <div class="card card-gray card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Total Register User (Last 6 Months)</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="totalRegisterUser" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
                <!-- /.card -->
            </div>

            <div class="col-12">
                <div class="card card-gray card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Login History (Last 6 Months)</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="visitors-chart" style="min-height: 300px; height: 300px; max-height: 300px; max-width: 100%;"></canvas>
                        <div class="d-flex flex-row justify-content-end">
                            <span class="mr-2">
                                <i class="fas fa-square" style="color: #007bff;"></i>
                                <span ng-bind="Month[0]"></span>
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-square" style="color: #1aff1a;"></i>
                                <span ng-bind="Month[1]"></span>
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-square" style="color: #00ccff;"></i>
                                <span ng-bind="Month[2]"></span>
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-square" style="color: #da4c3e;"></i>
                                <span ng-bind="Month[3]"></span>
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-square" style="color: #996633;"></i>
                                <span ng-bind="Month[4]"></span>
                            </span>
                            <span class="mr-2">
                                <i class="fas fa-square" style="color: #ced4da;"></i>
                                <span ng-bind="Month[5]"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card card-gray card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Top Page Visited</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="topPageVisit" style="min-height: 350px; height: 350px; max-height: 350px; max-width: 100%;"></canvas>
                    </div>
                </div>
                <!-- /.card -->
            </div>

        </div>
    </section>
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/Index.js"></script>
    <!-- ChartJS -->
    <script src="~/Content/plugins/chart.js/Chart.min.js"></script>
}

                                                                <option value="navbar-dark">Dark</option>
                                                                <option value="navbar-white">White</option>
                                                                <option value="navbar-warning">Yellow</option>
                                                                <option value="navbar-orange">Orange</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="custom-system" role="tabpanel" aria-labelledby="custom-system-tab">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-12 col-md-5">
                                                    <p class="lead font-weight-bold">System Settings</p>
                                                    <hr />

                                                    <div class="form-group row mb-2 has-feedback" show-errors>
                                                        <label for="IPAddress" class="col-sm-4 col-form-label">IP Address <small>*</small></label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control form-control-sm" id="IPAddress" name="IPAddress" ng-model="settings.IPAddress" placeholder="IP Address" ng-required="true">
                                                            <div style="color:red" class="invalid-feedback" ng-if="settingForm.IPAddress.$error.required">You can't leave this empty.</div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="siteEnv" class="col-sm-4 col-form-label">Environment</label>
                                                        <div class="col-sm-8 pt-2">
                                                            <div class="icheck-secondary d-inline">
                                                                <input type="radio" id="SystemEnvironment1" name="SystemEnvironment" ng-model="settings.SystemEnvironment" value="DEV" ng-checked="(settings.SystemEnvironment === 'DEV')? true : false">
                                                                <label for="SystemEnvironment1" class="mr-2 font-weight-normal">
                                                                    DEV
                                                                </label>
                                                            </div>
                                                            <div class="icheck-secondary d-inline">
                                                                <input type="radio" id="SystemEnvironment2" name="SystemEnvironment" ng-model="settings.SystemEnvironment" value="SIT" ng-checked="(settings.SystemEnvironment === 'SIT')? true : false">
                                                                <label for="SystemEnvironment2" class="mr-2 font-weight-normal">
                                                                    SIT
                                                                </label>
                                                            </div>
                                                            <div class="icheck-secondary d-inline">
                                                                <input type="radio" id="SystemEnvironment3" name="SystemEnvironment" ng-model="settings.SystemEnvironment" value="UAT" ng-checked="(settings.SystemEnvironment === 'UAT')? true : false">
                                                                <label for="SystemEnvironment3" class="mr-2 font-weight-normal">
                                                                    UAT
                                                                </label>
                                                            </div>
                                                            <div class="icheck-secondary d-inline">
                                                                <input type="radio" id="SystemEnvironment4" name="SystemEnvironment" ng-model="settings.SystemEnvironment" value="PRD" ng-checked="(settings.SystemEnvironment === 'PRD')? true : false">
                                                                <label for="SystemEnvironment4" class="mr-2 font-weight-normal">
                                                                    PRD
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2 has-feedback" show-errors>

                                                                <input type="checkbox" id="SidebarNavFlatStyle" name="SidebarNavFlatStyle" ng-model="settings.SidebarNavFlatStyle">
                                                                <label for="SidebarNavFlatStyle">Sidebar Nav Flat Style</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="icheck-secondary">
                                                                <input type="checkbox" id="NavbarSmallText" name="NavbarSmallText" ng-model="settings.NavbarSmallText">
                                                                <label for="NavbarSmallText">Navbar Small Text</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="icheck-secondary">
                                                                <input type="checkbox" id="SidebarNavLegacyStyle" name="SidebarNavLegacyStyle" ng-model="settings.SidebarNavLegacyStyle">
                                                                <label for="SidebarNavLegacyStyle">Sidebar Nav Legacy Style</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="icheck-secondary">
                                                                <input type="checkbox" id="SidebarNavSmallText" name="SidebarNavSmallText" ng-model="settings.SidebarNavSmallText">
                                                                <label for="SidebarNavSmallText">Sidebar Nav Small Text</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="icheck-secondary">
                                                                <input type="checkbox" id="SidebarNavCompact" name="SidebarNavCompact" ng-model="settings.SidebarNavCompact">
                                                                <label for="SidebarNavCompact">Sidebar Nav Compact</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="icheck-secondary">
                                                                <input type="checkbox" id="FooterSmallText" name="FooterSmallText" ng-model="settings.FooterSmallText">

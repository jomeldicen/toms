                                                                <label for="SidebarNavChildIndent">Sidebar Nav Child Indent</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="icheck-secondary">
                                                                <input type="checkbox" id="BrandLogoSmallText" name="BrandLogoSmallText" ng-model="settings.BrandLogoSmallText">
                                                                <label for="BrandLogoSmallText">Brand Logo Small Text</label>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="NavbarColorVariants" class="col-sm-5 col-form-label">Navbar Color Variant</label>
                                                        <div class="col-sm-7">
                                                            <select class="form-control form-control-sm" id="NavbarColorVariants" name="NavbarColorVariants" ng-model="settings.NavbarColorVariants" ng-required="true">
                                                                <option value="navbar-indigo">Indigo</option>
                                                                <option value="navbar-primary">Blue</option>
                                                                <option value="navbar-lightblue">Light Blue</option>
                                                                <option value="navbar-success">Green</option>
                                                                <option value="navbar-danger">Red</option>
                                                                <option value="navbar-navy">Navy</option>
                                                                <option value="navbar-light">Light</option>
                                                                <option value="navbar-secondary">Gray</option>
                                                                <option value="navbar-gray-dark">Gray Dark</option>
                                                                <option value="navbar-dark">Dark</option>
                                                                <option value="navbar-white">White</option>
                                                                <option value="navbar-warning">Yellow</option>
                                                                <option value="navbar-orange">Orange</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="LinkColorVariants" class="col-sm-5 col-form-label">Link Color Variant</label>
                                                        <div class="col-sm-7">
                                                            <select class="form-control form-control-sm" id="LinkColorVariants" name="LinkColorVariants" ng-model="settings.LinkColorVariants" ng-required="true">
                                                                <option value="accent-primary">Accent Blue</option>
                                                                <option value="accent-warning">Accent Yellow</option>
                                                                <option value="accent-info">Accent Cyan</option>
                                                                <option value="accent-danger">Accent Red</option>
                                                                <option value="accent-success">Accent Green</option>
                                                                <option value="accent-indigo">Accent Indigo</option>
                                                                <option value="accent-lightblue">Accent Light Blue</option>
                                                                <option value="accent-navy">Accent Navy</option>
                                                                <option value="accent-purple">Accent Purple</option>
                                                                <option value="accent-fuchsia">Accent Fuchsia</option>
                                                                <option value="accent-pink">Accent Pink</option>
                                                                <option value="accent-maroon">Accent Maroon</option>
                                                                <option value="accent-orange">Accent Orange</option>
                                                                <option value="accent-lime">Accent Lime</option>
                                                                <option value="accent-teal">Accent Teal</option>
                                                                <option value="accent-olive">Accent Olive</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="DarkSidebarVariants" class="col-sm-5 col-form-label">Dark Sidebar Variant</label>
                                                        <div class="col-sm-7">
                                                            <select class="form-control form-control-sm" id="DarkSidebarVariants" name="DarkSidebarVariants" ng-model="settings.DarkSidebarVariants" ng-required="true">
                                                                <option value="sidebar-dark-primary">Blue</option>
                                                                <option value="sidebar-dark-warning">Yellow</option>
                                                                <option value="sidebar-dark-info">Cyan</option>
                                                                <option value="sidebar-dark-danger">Red</option>
                                                                <option value="sidebar-dark-success">Green</option>
                                                                <option value="sidebar-dark-indigo">Indigo</option>
                                                                <option value="sidebar-dark-lightblue">Light Blue</option>
                                                                <option value="sidebar-dark-navy">Navy</option>
                                                                <option value="sidebar-dark-purple">Purple</option>
                                                                <option value="sidebar-dark-fuchsia">Fuchsia</option>
                                                                <option value="sidebar-dark-pink">Pink</option>
                                                                <option value="sidebar-dark-maroon">Maroon</option>
                                                                <option value="sidebar-dark-orange">Orange</option>
                                                                <option value="sidebar-dark-lime">Lime</option>
                                                                <option value="sidebar-dark-teal">Teal</option>
                                                                <option value="sidebar-dark-olive">Olive</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="LightSidebarVariants" class="col-sm-5 col-form-label">Light Sidebar Variant</label>
                                                        <div class="col-sm-7">
                                                            <select class="form-control form-control-sm" id="LightSidebarVariants" name="LightSidebarVariants" ng-model="settings.LightSidebarVariants" ng-required="true">
                                                                <option value="sidebar-light-primary">Blue</option>
                                                                <option value="sidebar-light-warning">Yellow</option>
                                                                <option value="sidebar-light-info">Cyan</option>
                                                                <option value="sidebar-light-danger">Red</option>
                                                                <option value="sidebar-light-success">Green</option>
                                                                <option value="sidebar-light-indigo">Indigo</option>
                                                                <option value="sidebar-light-lightblue">Light Blue</option>
                                                                <option value="sidebar-light-navy">Navy</option>
                                                                <option value="sidebar-light-purple">Purple</option>
                                                                <option value="sidebar-light-fuchsia">Fuchsia</option>
                                                                <option value="sidebar-light-pink">Pink</option>
                                                                <option value="sidebar-light-maroon">Maroon</option>
                                                                <option value="sidebar-light-orange">Orange</option>
                                                                <option value="sidebar-light-lime">Lime</option>
                                                                <option value="sidebar-light-teal">Teal</option>
                                                                <option value="sidebar-light-olive">Olive</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="BrandLogoVariants" class="col-sm-5 col-form-label">Brand Logo Variant</label>
                                                        <div class="col-sm-7">
                                                            <select class="form-control form-control-sm" id="BrandLogoVariants" name="BrandLogoVariants" ng-model="settings.BrandLogoVariants" ng-required="true">
                                                                <option value="navbar-indigo">Indigo</option>
                                                                <option value="navbar-primary">Blue</option>
                                                                <option value="navbar-lightblue">Light Blue</option>
                                                                <option value="navbar-success">Green</option>
                                                                <option value="navbar-danger">Red</option>
                                                                <option value="navbar-navy">Navy</option>
                                                                <option value="navbar-light">Light</option>
                                                                <option value="navbar-secondary">Gray</option>

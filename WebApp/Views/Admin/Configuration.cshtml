
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="Settings" ng-init="init('@ViewBag.PageUrl')">
    <section class="content" ng-init="GetSettingsData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="loading" ng-if="loading">Loading &#8230;</div>
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <form name="settingForm" novalidate role="form">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-click="GetSettingsData()">
                                            <i class="fas fa-ban"></i> Cancel
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="UpdateSettingsData(settings)">
                                            <i class="fas fa-save"></i> Update
                                        </button>
                                    </div>
                                </div>
                                <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="custom-site-tab" data-toggle="pill" href="#custom-site" role="tab" aria-controls="custom-site" aria-selected="true">Site</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-system-tab" data-toggle="pill" href="#custom-system" role="tab" aria-controls="custom-system" aria-selected="false">System</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-server-tab" data-toggle="pill" href="#custom-server" role="tab" aria-controls="custom-server" aria-selected="false">Server</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-integration-tab" data-toggle="pill" href="#custom-integration" role="tab" aria-controls="custom-integration" aria-selected="false">Integration</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-information-tab" data-toggle="pill" href="#custom-information" role="tab" aria-controls="custom-information" aria-selected="false">Information</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-help-tab" data-toggle="pill" href="#custom-help" role="tab" aria-controls="custom-help" aria-selected="false">Help Support</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="custom-content-below-tabContent">
                                    <div class="tab-pane fade show active" id="custom-site" role="tabpanel" aria-labelledby="custom-site-tab">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-12 col-md-5">
                                                    <p class="lead font-weight-bold">Site Settings</p>
                                                    <hr />

                                                    <div class="form-group row mb-2 has-feedback" show-errors>
                                                        <label for="SiteName" class="col-sm-4 col-form-label">Site Name <small>*</small></label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control form-control-sm" id="SiteName" name="SiteName" ng-model="settings.SiteName" placeholder="Site Name" ng-required="true">
                                                            <div style="color:red" class="invalid-feedback" ng-if="settingForm.SiteName.$error.required">You can't leave this empty.</div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2has-feedback" show-errors>
                                                        <label for="SiteCode" class="col-sm-4 col-form-label">Site Short Abbrv. <small>*</small></label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control form-control-sm" id="SiteCode" name="SiteCode" ng-model="settings.SiteCode" placeholder="Site Code" ng-required="true">
                                                            <div style="color:red" class="invalid-feedback" ng-if="settingForm.SiteCode.$error.required">You can't leave this empty.</div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="Type" class="col-sm-4 col-form-label">Site Offline</label>
                                                        <div class="col-sm-8 pt-2">
                                                            <div class="icheck-secondary d-inline">
                                                                <input type="radio" id="siteOffline1" name="siteOffline" ng-model="settings.SiteOffline" value="true" ng-checked="(settings.SiteOffline === true)? true : false">
                                                                <label for="siteOffline1" class="mr-2 font-weight-normal">
                                                                    Yes
                                                                </label>
                                                            </div>
                                                            <div class="icheck-secondary d-inline">
                                                                <input type="radio" id="siteOffline2" name="siteOffline" ng-model="settings.SiteOffline" value="false" ng-checked="(settings.SiteOffline === false)? true : false">
                                                                <label for="siteOffline2" class="mr-2 font-weight-normal">
                                                                    No
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="SiteOfflineMessage" class="col-sm-4 col-form-label">Offline Message</label>
                                                        <div class="col-sm-8">
                                                            <textarea class="form-control form-control-sm" id="SiteOfflineMessage" name="SiteOfflineMessage" ng-model="settings.SiteOfflineMessage" rows="3" placeholder="Offline Message"></textarea>
                                                        </div>
                                                    </div>
                                                    <br />

                                                    <p class="lead font-weight-bold">Metadata Settings</p>
                                                    <hr />

                                                    <div class="form-group row mb-2">
                                                        <label for="sitemetadesc" class="col-sm-4 col-form-label">Site Meta Description</label>
                                                        <div class="col-sm-8">
                                                            <textarea class="form-control form-control-sm" id="sitemetadesc" name="sitemetadesc" ng-model="settings.SiteMetaDescription" rows="3" placeholder="Site Meta Description"></textarea>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="sitemetakeyword" class="col-sm-4 col-form-label">Site Meta Keyword</label>
                                                        <div class="col-sm-8">
                                                            <textarea class="form-control form-control-sm" id="sitemetakeyword" name="sitemetakeyword" ng-model="settings.SiteMetaKeyword" rows="3" placeholder="Site Meta Keyword"></textarea>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="Robots" class="col-sm-4 col-form-label">Robots</label>
                                                        <div class="col-sm-8">
                                                            <select class="form-control form-control-sm" id="Robots" name="Robots" ng-model="settings.Robots" ng-required="true">
                                                                <option value="Index, follow">Index, follow</option>
                                                                <option value="No index, follow">No index, follow</option>
                                                                <option value="Index, No follow">Index, No follow</option>
                                                                <option value="No index, no follow">No index, no follow</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="author" class="col-sm-4 col-form-label">Author</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control form-control-sm" id="author" name="author" ng-model="settings.SiteAuthor" placeholder="Author">
                                                        </div>
                                                    </div>

                                                    <div class="form-group row mb-2">
                                                        <label for="contentrights" class="col-sm-4 col-form-label">Content Rights</label>
                                                        <div class="col-sm-8">
                                                            <input type="text" class="form-control form-control-sm" id="contentrights" name="contentrights" ng-model="settings.ContentRight" placeholder="Content Rights">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 col-md-1">
                                                    &nbsp;
                                                </div>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="Project" ng-init="init('@ViewBag.PageUrl')">
    <section class="content" ng-init="GetProjectData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-danger btn-sm float-right" ng-if="Ctrl.wDelete" ng-click="DeleteData(Project)">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(Project, 0)">
                                            <i class="fas fa-times-circle"></i> Deactivate
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(Project, 1)">
                                            <i class="fas fa-check-circle"></i> Activate
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" data-toggle="modal" data-target="#createProjectModal" ng-if="Ctrl.wAdd" ng-click="AddData()">
                                            <i class="fas fa-plus-circle"></i> Create
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="UpdateData(Project)">
                                            <i class="fas fa-save"></i> Update
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" data-toggle="modal" data-target="#fetchProjectModal" ng-if="Ctrl.wFetch" ng-click="FetchData()">
                                            <i class="fas fa-sync"></i> Fetch
                                        </button>
                                    </div>
                                </div>
                                    
                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length form-inline" id="example1_length">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <form ng-submit="search()" role="form">
                                            <div class="form-inline dataTables_filter">
                                                <label>
                                                    Search:
                                                    <input type="search" class="form-control form-control-sm" placeholder="" ng-model="pagingInfo.search">
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="text-center" width="3%">
                                                        <input type="checkbox" name="checkAll" id="checkAll" ng-model="selectedAll" ng-click="selectAll()" ng-disabled="(!Ctrl.wDelete && !Ctrl.wEdit)"/>
                                                    </th>
                                                    <th width="4%">Nos</th>
                                                    <th class="sorting" ng-click="sort('CompanyCode')">Company</th>
                                                    <th class="sorting" ng-click="sort('ProjectCode')">Project Code</th>
                                                    <th class="sorting" ng-click="sort('BusinessEntity')">Business Entity</th>
                                                    <th class="text-center sorting" ng-click="sort('Published')">Status</th>
                                                    <th class="text-center sorting" ng-click="sort('TOM')">TOM</th>
                                                    <th class="text-center sorting" ng-click="sort('TSM')">TSM</th>
                                                    <th class="text-center sorting" ng-click="sort('EMM')">EMM</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="9"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="pj in Project">
                                                    <td class="text-center">
                                                        <input type="checkbox" name="check" id="check{{$index + 1}}" ng-model="pj.isChecked" ng-change="checkSelected(pj.isChecked)" ng-disabled="(!Ctrl.wDelete && !Ctrl.wEdit)"/>
                                                    </td>
                                                    <td ng-bind="(pagingInfo.itemsPerPage * (pagingInfo.page - 1)) + $index + 1"></td>
                                                    <td ng-bind="pj.CompanyCode"></td>
                                                    <td ng-bind="pj.ProjectCode"></td>
                                                    <td ng-bind="pj.BusinessEntity"></td>
                                                    <td class="text-center"><span ng-class="(pj.Published === 'True')? 'badge badge-success' : 'badge badge-danger'" ng-bind="(pj.Published === 'True')? 'Active' : 'Inactive'"></span></td>
                                                    <td class="text-center">
                                                        <input type="checkbox" name="TOM" id="TOM{{$index + 1}}" ng-model="pj.TOM" />
                                                    </td>
                                                    <td class="text-center">
                                                        <input type="checkbox" name="TSM" id="TSM{{$index + 1}}" ng-model="pj.TSM" />
                                                    </td>
                                                    <td class="text-center">
                                                        <input type="checkbox" name="EMM" id="EMM{{$index + 1}}" ng-model="pj.EMM" />
                                                    </td>
                                                 </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>

    <div class="modal fade" id="fetchProjectModal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Fetch Data</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form name="syncForm" novalidate role="form">
                    <div class="modal-body js-loading-bar">
                        <div class="row">
                            <div class="col-12">
                                <p>You are going to sync SAP Projects data!</p>
                                <p>Do you want to proceed?</p>

                            </div>
                            <div class="col-12 form-group has-feedback" show-errors>
                                <label for="Id">Company</label>
                                <select class="form-control form-control-sm" id="Id" name="Id" ng-disabled="ro" ng-model="data.Id" ng-required="true">
                                    <option value="0">All projects</option>
                                    <option ng-repeat="co in Companys" value="{{co.Id}}">{{co.Company}}</option>
                                </select>
                                <div style="color:red" class="invalid-feedback" ng-if="syncForm.Id.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="col-12">
                                <div class="progress progress-sm active">
                                    <div class="progress-bar bg-primary progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                        <span class="sr-only">0% Complete</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                        <button type="button" class="btn btn-primary btn-sm" ng-disabled="ro" ng-click="FetchProject(data.Id)">Proceed</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

    <div class="modal fade" id="createProjectModal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Project</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form name="projectForm" novalidate role="form">
                    <div class="modal-body">
                        <div class="form-group has-feedback" show-errors>
                            <label for="CompanyCode">Company</label>
                            <select class="form-control form-control-sm" id="CompanyCode" name="CompanyCode" ng-model="data.CompanyCode" ng-required="true">
                                <option value="">Select Please ...</option>
                                <option ng-repeat="co in Companys" value="{{co.Code}}">{{co.Description}}</option>
                            </select>
                            <div style="color:red" class="invalid-feedback" ng-if="projectForm.CompanyCode.$error.required">You can't leave this empty.</div>
                        </div>
                        <div class="form-group has-feedback" show-errors>
                            <label for="ProjectCode">Project Code</label>
                            <input type="text" class="form-control form-control-sm" id="ProjectCode" name="ProjectCode" ng-model="data.ProjectCode" ng-required="true" placeholder="Project Code">
                            <div style="color:red" class="invalid-feedback" ng-if="projectForm.ProjectCode.$error.required">You can't leave this empty.</div>
                        </div>
                        <div class="form-group has-feedback" show-errors>
                            <label for="BusinessEntity">Business Entity</label>
                            <input type="text" class="form-control form-control-sm" id="BusinessEntity" name="BusinessEntity" ng-model="data.BusinessEntity" ng-required="true" placeholder="Business Entity">
                            <div style="color:red" class="invalid-feedback" ng-if="projectForm.BusinessEntity.$error.required">You can't leave this empty.</div>
                        </div>
                        <div class="form-group has-feedback" show-errors>
                            <label for="published">Published</label>
                            <select class="form-control form-control-sm" id="published" name="published" ng-model="data.Published" ng-required="true">
                                <option value="True">Active</option>
                                <option value="False">Inactive</option>
                            </select>
                            <div style="color:red" class="invalid-feedback" ng-if="projectForm.published.$error.required">You can't leave this empty.</div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                        <button type="button" class="btn btn-secondary btn-sm" ng-click="SaveProject(data)">Save changes</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/Project.js"></script>
}

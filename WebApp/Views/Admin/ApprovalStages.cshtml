
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="ApprovalStage">
    <section class="content" ng-init="GetApprovalStageData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-8">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-danger btn-sm float-right" ng-if="Ctrl.wDelete" ng-click="DeleteData(ApprovalStage)">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(ApprovalStage, 0)">
                                            <i class="fas fa-times-circle"></i> Deactivate
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(ApprovalStage, 1)">
                                            <i class="fas fa-check-circle"></i> Activate
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" data-toggle="modal" data-target="#createApprovalStageModal" ng-if="Ctrl.wAdd" ng-click="AddData()">
                                            <i class="fas fa-plus-circle"></i> Create
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length form-inline">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <form ng-submit="search()" role="form">
                                            <div class="form-inline dataTables_filter">
                                                <label>
                                                    Search:
                                                    <input type="search" class="form-control form-control-sm" placeholder="" ng-model="pagingInfo.search">
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="text-center" width="3%">
                                                        <input type="checkbox" name="checkAll" id="checkAll" ng-model="selectedAll" ng-click="selectAll()" ng-disabled="!Ctrl.wDelete || !Ctrl.wEdit" />
                                                    </th>
                                                    <th class="sorting" width="4%" ng-click="sort('Id')">Nos</th>
                                                    <th class="sorting" ng-click="sort('ApprovalStageCode')">Code</th>
                                                    <th class="sorting" ng-click="sort('Description')">Description</th>
                                                    <th class="sorting" ng-click="sort('Address')">Address</th>
                                                    <th class="text-center sorting" ng-click="sort('Published')">Status</th>
                                                    <th class="text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="7"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="co in ApprovalStage">
                                                    <td class="text-center">
                                                        <input type="checkbox" name="check" id="check{{$index + 1}}" ng-model="co.isChecked" ng-change="checkSelected(co.isChecked)" ng-disabled="!Ctrl.wDelete || !Ctrl.wEdit" />
                                                    </td>
                                                    <td ng-bind="(pagingInfo.itemsPerPage * (pagingInfo.page - 1)) + $index + 1"></td>
                                                    <td ng-bind="co.ApprovalStageCode"></td>
                                                    <td ng-bind="co.Description"></td>
                                                    <td ng-bind="co.Address"></td>
                                                    <td class="text-center"><span ng-class="(co.Published === 'True')? 'badge badge-success' : 'badge badge-danger'" ng-bind="(co.Published === 'True')? 'Active' : 'Inactive'"></span></td>
                                                    <td class="text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">
                                                        <button type="button" class="btn btn-secondary btn-circle btn-sm" data-toggle="modal" data-target="#createApprovalStageModal" ng-if="Ctrl.wEdit" ng-click="EditApprovalStageData(co)"><i class="fas fa-pencil-alt"></i></button>
                                                        <button type="button" class="btn btn-danger btn-circle btn-sm" ng-if="Ctrl.wDelete" ng-click="DeleteApprovalStage(co)"><i class="fas fa-trash-alt"></i></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>

    <div class="modal fade" id="createApprovalStageModal">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Approval Stage - Setup</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form name="ApprovalStageForm" class="form-horizontal" novalidate role="form">
                    <div class="modal-body">
                        <div class="form-group has-feedback row mb-0" show-errors>
                            <label for="Name" class="col-sm-5 col-form-label">Stage Name</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control form-control-sm" id="Name" name="Name" placeholder="Name">
                                <div style="color:red" class="invalid-feedback" ng-if="ApprovalStageForm.Name.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>
                        <div class="form-group has-feedback row mb-0" show-errors>
                            <label for="Description" class="col-sm-5 col-form-label">Stage Description</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control form-control-sm" id="Description" name="Description" placeholder="Description">
                                <div style="color:red" class="invalid-feedback" ng-if="ApprovalStageForm.Description.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>
                        <div class="form-group has-feedback row mb-0" show-errors>
                            <label for="ApprovalNos" class="col-sm-7 col-form-label">No. of Approvals Required</label>
                            <div class="col-sm-5">
                                <input type="number" class="form-control form-control-sm" id="ApprovalNos" name="ApprovalNos" placeholder="Approval Nos">
                                <div style="color:red" class="invalid-feedback" ng-if="ApprovalStageForm.ApprovalNos.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>
                        <div class="form-group has-feedback row" show-errors>
                            <label for="RejectionNos" class="col-sm-7 col-form-label">No. of Rejections Required</label>
                            <div class="col-sm-5">
                                <input type="number" class="form-control form-control-sm" id="RejectionNos" name="RejectionNos" placeholder="Rejection Nos">
                                <div style="color:red" class="invalid-feedback" ng-if="ApprovalStageForm.RejectionNos.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>
                        <div class="form-group row mb-0">
                            <table class="table table-bordered table-striped customTable mb-0">
                                <thead>
                                    <tr>
                                        <th width="3%">Nos</th>
                                        <th>Authorizer</th>
                                        <th>Department</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>Jomel Dicen</td>
                                        <td>IT BSD</td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>Ferdinand Canta</td>
                                        <td>IT BSD</td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    @*<tr ng-if="Users.count == 0">
            <td colspan="3"><center>No data to display</center></td>
        </tr>
        <tr ng-repeat="pr in Users">
            <td ng-bind="$index + 1"></td>
            <td ng-bind="pr.Fullname"></td>
            <td ng-bind="pr.Department"></td>
        </tr>*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                        <button type="button" class="btn btn-secondary btn-sm" ng-click="SaveApprovalStage(data)">Save changes</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/ApprovalStage.js"></script>
}


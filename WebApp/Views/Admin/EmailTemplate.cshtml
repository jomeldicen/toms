
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="EmailTemplate" ng-init="init('@ViewBag.PageUrl')">
    <section class="content" ng-init="GetEmailTemplateData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-8">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-danger btn-sm float-right" ng-if="Ctrl.wDelete" ng-click="DeleteData(EmailTemplate)">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(EmailTemplate, 0)">
                                            <i class="fas fa-times-circle"></i> Deactivate
                                        </button>
                                        <button type="button" class="btn btn-secondary btn-sm float-right mr-1" ng-if="Ctrl.wEdit" ng-click="StatusData(EmailTemplate, 1)">
                                            <i class="fas fa-check-circle"></i> Activate
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" data-toggle="modal" data-target="#createEmailTemplateModal" ng-if="Ctrl.wAdd" ng-click="AddData()">
                                            <i class="fas fa-plus-circle"></i> Create
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_length form-inline">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-5">
                                        <form ng-submit="search()" role="form">
                                            <div class="form-inline dataTables_filter">
                                                <label>
                                                    Search:
                                                    <input type="search" class="form-control form-control-sm" placeholder="" ng-model="pagingInfo.search">
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="text-center" width="3%">
                                                        <input type="checkbox" name="checkAll" id="checkAll" ng-model="selectedAll" ng-click="selectAll()" ng-disabled="!Ctrl.wDelete || !Ctrl.wEdit" />
                                                    </th>
                                                    <th width="4%">Nos</th>
                                                    <th class="sorting" ng-click="sort('Code')">Code</th>
                                                    <th class="sorting" ng-click="sort('Name')">Name</th>
                                                    <th class="text-center sorting" ng-click="sort('Published')">Status</th>
                                                    <th class="text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="7"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="et in EmailTemplate">
                                                    <td class="text-center">
                                                        <input type="checkbox" name="check" id="check{{$index + 1}}" ng-model="et.isChecked" ng-change="checkSelected(et.isChecked)" ng-disabled="!Ctrl.wDelete || !Ctrl.wEdit" />
                                                    </td>
                                                    <td ng-bind="(pagingInfo.itemsPerPage * (pagingInfo.page - 1)) + $index + 1"></td>
                                                    <td ng-bind="et.Code"></td>
                                                    <td ng-bind="et.Name"></td>
                                                    <td class="text-center"><span ng-class="(et.Published === 'True')? 'badge badge-success' : 'badge badge-danger'" ng-bind="(et.Published === 'True')? 'Active' : 'Inactive'"></span></td>
                                                    <td class="text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">
                                                        <button type="button" class="btn btn-secondary btn-circle btn-sm" data-toggle="modal" data-target="#createEmailTemplateModal" ng-if="Ctrl.wEdit" ng-click="EditEmailTemplateData(et)"><i class="fas fa-pencil-alt"></i></button>
                                                        <button type="button" class="btn btn-danger btn-circle btn-sm" ng-if="Ctrl.wDelete" ng-click="DeleteEmailTemplate(et)"><i class="fas fa-trash-alt"></i></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->

                <div class="col-4">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <h3 class="card-title">
                                <i class="ion ion-clipboard mr-1"></i>
                                Legend
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <dl class="row text-sm">
                                <dt class="col-sm-5"><span class="badge badge-dark">{numberInWords}</span></dt>
                                <dd class="col-sm-7">number representation in words</dd>
                                <dt class="col-sm-5"><span class="badge badge-dark">{number}</span></dt>
                                <dd class="col-sm-7">number representation</dd>
                                <dt class="col-sm-5"><span class="badge badge-dark">{CustomerName}</span></dt>
                                <dd class="col-sm-7">customer name representation</dd>
                                <dt class="col-sm-5"><span class="badge badge-dark">{CustomerNos}</span></dt>
                                <dd class="col-sm-7">customer number representation</dd>
                                <dt class="col-sm-5"><span class="badge badge-dark">{days}</span></dt>
                                <dd class="col-sm-7">number repesentation</dd>
                            </dl>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.row -->
        </div>
    </section>

    <div class="modal fade" id="createEmailTemplateModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Email Template</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form name="emailTemplateForm" novalidate role="form">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <div class="form-group">
                                    <label for="Code">Code</label>
                                    <input type="text" class="form-control form-control-sm" id="Code" name="Code" ng-model="data.Code" placeholder="Code" ng-readonly="true">
                                </div>
                                <div class="form-group has-feedback" show-errors>
                                    <label for="Name">Name</label>
                                    <input type="text" class="form-control form-control-sm" id="Name" name="Name" ng-model="data.Name" ng-required="true" placeholder="Name">
                                    <div style="color:red" class="invalid-feedback" ng-if="emailTemplateForm.Name.$error.required">You can't leave this empty.</div>
                                </div>
                                <div class="form-group has-feedback" show-errors>
                                    <label for="Description">Description</label>
                                    <textarea class="form-control form-control-sm" rows="3" id="Description" name="Description" ng-model="data.Description" ng-required="true" placeholder="Description"></textarea>
                                    <div style="color:red" class="invalid-feedback" ng-if="emailTemplateForm.Description.$error.required">You can't leave this empty.</div>
                                </div>
                                <div class="form-group has-feedback" show-errors>
                                    <label for="Subject">Subject</label>
                                    <input type="text" class="form-control form-control-sm" id="Subject" name="Subject" ng-model="data.EmailSubject" ng-required="true" placeholder="Subject">
                                    <div style="color:red" class="invalid-feedback" ng-if="emailTemplateForm.Subject.$error.required">You can't leave this empty.</div>
                                </div>
                                <div class="form-group has-feedback" show-errors>
                                    <label for="published">Published</label>
                                    <select class="form-control form-control-sm" id="published" name="published" ng-model="data.Published" ng-required="true">
                                        <option value="True">Active</option>
                                        <option value="False">Inactive</option>
                                    </select>
                                    <div style="color:red" class="invalid-feedback" ng-if="emailTemplateForm.published.$error.required">You can't leave this empty.</div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-9">
                                <div class="form-group has-feedback">
                                    <label for="Body">Body</label>
                                    <summernote config="options" ng-model="data.EmailBody"></summernote>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                        <button type="button" class="btn btn-secondary btn-sm" ng-click="SaveEmailTemplate(data)">Save changes</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/EmailTemplate.js"></script>
}

@section csss{
    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/plugins/summernote/summernote-bs4.css">
}
